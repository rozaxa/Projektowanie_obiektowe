{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Edit Product</h1>

        <div class="card shadow-sm mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h5 class="card-title text-center mb-3">Modify the product details below:</h5>

                <div class="px-3">
                    {{ form_start(form) }}

                    <div class="mb-3 row">
                        {{ form_label(form.name, 'Name:', {'label_attr': {'class': 'col-sm-3 col-form-label text-end'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="mb-3 row">
                        {{ form_label(form.price, 'Price:', {'label_attr': {'class': 'col-sm-3 col-form-label text-end'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="mb-3 row">
                        {{ form_label(form.description, 'Description:', {'label_attr': {'class': 'col-sm-3 col-form-label text-end'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>

                    {{ form_end(form) }}
                </div>

                <div class="mt-3 text-center">
                    <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to List</a>
                </div>

                <div class="mt-3 text-center">
                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
