{% extends 'base.html.twig' %}

{% block title %}Add New Product{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Add New Product</h1>

        <div class="card shadow-sm p-4">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Product Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.price, 'Price', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Cancel</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
